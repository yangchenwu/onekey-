<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#FFF8DC" >

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/bg_logout_normal" />

    <TextView
        android:id="@+id/tv_item_imagename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_item_image"
        android:text="11111111111" />
    
    <TextView
        android:id="@+id/view_line"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="#000000"
        />

    

    <TextView
        android:id="@+id/tv_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
         android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/view_line"
        android:drawableLeft="@drawable/login_icon_account"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_item_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_item_username"
        android:layout_toRightOf="@id/view_line"
        android:drawableLeft="@drawable/login_icon_password"
    
      />

    <TextView
        android:id="@+id/tv_objectId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="ID"
        android:visibility="invisible" />

</RelativeLayout>